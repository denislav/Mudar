{
  "manifest_version": 2,
  "name": "Murdaroff - The Smart Transliterator",
  "short_name": "Murdaroff",
  "version": "0.1.1",
  "author": "Denislav Savkov",
  "description": "This extension autocorrects as you type Bulgarian and English words written with the incorrect keyboard input method (layout).",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["vladko.js"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "permissions": [
    "activeTab",
    "background",
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "offline_enabled": false
}